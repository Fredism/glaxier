{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist/typings",
        "module": "commonjs",
        "target": "es6",
		"moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "glaxier": ["lib/index.ts"],
            "glaxier/*": ["lib/*"],
            "*": [
                "node_modules/*"
            ],
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        
    },
    "include": [
        "lib/**/*",
    ]
}